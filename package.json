{
  "name": "@jinjos/vibe-mcp",
  "version": "1.1.1",
  "description": "MCP server for vibe-cli - Universal AI rules system",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "vibe-mcp": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "clean": "rm -rf dist",
    "verify": "node scripts/verify-build.js",
    "build:verify": "npm run build && npm run verify",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "vibe-cli",
    "coding-rules",
    "cursor",
    "claude",
    "copilot",
    "gemini"
  ],
  "author": "Jinjos",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@jinjos/vibe-cli": ">=1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jinjos/vibe-mcp.git"
  },
  "homepage": "https://github.com/Jinjos/vibe-mcp#readme",
  "bugs": {
    "url": "https://github.com/Jinjos/vibe-mcp/issues"
  }
}